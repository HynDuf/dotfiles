#!/bin/sh

rm -rf ~/.config/nvim
rm -rf ~/.local/share/nvim
rm -rf ~/.cache/nvim

git clone https://github.com/NvChad/NvChad ~/.config/nvim --depth 1 &&

cp -r ~/Projects/dotfiles/.config/nvim/lua/custom ~/.config/nvim/lua/ &&
cp -r ~/Projects/dotfiles/.config/nvim/ftplugin ~/.config/nvim/ &&
nvim

