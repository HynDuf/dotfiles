#!/bin/bash

# Array of folders/files to update to Github
declare -a needUpdate=(".config/colorls" ".config/eww" ".config/btop" ".config/cava" ".config/nvim/lua/custom" ".config/rofi" ".config/bspwm" ".config/dunst" ".config/picom" ".config/sxhkd" ".config/ranger" ".config/gtk-3.0" ".config/polybar" ".config/zathura" ".config/neofetch" ".xinitrc" ".Xresources" ".clang-format" ".zshrc" ".oh-my-zsh/themes/pacman.zsh-theme" "bin")

# Local dotfiles folder
dotfilesPath="$HOME/Projects/dotfiles"

# Iterate through each file/folder and replace to the dotfiles folder
for f in "${needUpdate[@]}"; do
    rm -rf "${dotfilesPath}/${f}"
    mkdir -p "$(dirname "${dotfilesPath}/${f}")" && cp -r  "$HOME/${f}" "${dotfilesPath}/${f}"
done
