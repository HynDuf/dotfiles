#! /bin/sh

chosen=$(printf "  Power Off\n  Restart\n  Lock\n  Log out\n  Sleep" | rofi -dmenu -i -theme-str '@import "themes/powermenu.rasi"')

case "$chosen" in
	"  Power Off") poweroff ;;
	"  Restart") reboot ;;
	"  Lock") betterlockscreen -l dim ;;
    "  Log out") ~/bin/close_bspwm ;;
    "  Sleep") doas systemctl suspend ;;
	*) exit 1 ;;
esac
